	<fx:Declarations>
		<mx:DateFormatter id="dateformater" formatString="YY-MM-DD" />
		<mx:DateFormatter id="timeformater" formatString="HH:NN" />
	</fx:Declarations>
	
</s:MobileIconItemRenderer>
